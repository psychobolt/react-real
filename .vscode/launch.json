{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Debug Tests",
        "type": "node",
        "request": "launch",
        "program": "${workspaceRoot}/node_modules/jest-cli/bin/jest.js",
        "stopOnEntry": false,
        "args": ["--runInBand"],
        "cwd": "${workspaceRoot}",
